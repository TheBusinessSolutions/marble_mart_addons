<odoo>
    <record id="view_form_pos_close_screen_session_wizard" model="ir.ui.view">
        <field name="name">pos.close.screen.session.wizard.form</field>
        <field name="model">pos.close.screen.session.wizard</field>
        <field name="arch" type="xml">
            <form string="Force Close Session">
                <p>There are some pending kitchen orders related to this session, Do you want to cancel all the orders and close this session?</p>
                <footer>
                    <button name="close_screen_session" string="Close Session" type="object" class="btn-primary" data-hotkey="q"/>
                    <button special="cancel" data-hotkey="z" string="Cancel" class="btn-secondary" />
                </footer>
            </form>
        </field>
    </record>
</odoo>
