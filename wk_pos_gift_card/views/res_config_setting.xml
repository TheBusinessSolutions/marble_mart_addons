<odoo>
    <data>
        <record id="res_config_settings_view_form_clear_cart" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.clear_cart</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form" />
            <field name="arch" type="xml">
                <xpath expr="//block[@id='pos_pricing_section']" position="after">
                    <h2 name="Gift_card">Gift Card</h2>
                    <div class="row mt16 o_settings_container" id="Gift_Cards">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="pos_print_gift_card" />
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="pos_print_gift_card" />
                                <div class="text-muted">
                                    Print Gift Card
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
